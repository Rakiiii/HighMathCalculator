<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.fragments.SettingFragment">
    <com.dev.smurf.highmathcalculator.CustomeView.RunningBackgroundMatrixView
            style="@style/BackgroundMatrixViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SettingLinearLayout"
            android:orientation="vertical">
        <TextView
                style="@style/settingsHeadlineTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/savingHeadline"/>

            <Switch
                    style="@style/settingsTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/matrixSettings"
                    android:id="@+id/swtchMatrixMode"
            />

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/darker_gray"/>


            <Switch
                    style="@style/settingsTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/matrixHolderMode"
                    android:id="@+id/swtchMatrixHolderMode"
            />

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/darker_gray"/>


        <Switch
                style="@style/settingsTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/polinomSettings"
                android:id="@+id/swtchPolinomMode"
        />

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/darker_gray"/>
        <Button
                style="@style/btnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnDeleteMatrixDb"
                android:text="@string/deleteMatrixInsatnce"
        />

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/darker_gray"/>

        <Button
                style="@style/btnStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnDeletePolinomDb"
                android:text="@string/deletePolinomInstance"
        />

        <ImageView
                android:id="@+id/testIm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />


    </LinearLayout>

</FrameLayout>